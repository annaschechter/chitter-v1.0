<article id="peeps"
	<ol>
		<%if @peeps%>
			<% @peeps.each do |peep| %>
				<% @user = User.first(:id => peep.user_id)%>
				<li class="peep" ><p id="time-added">  <%=peep.time_added.strftime("%Y-%m-%d %H:%M")%></p><br/> 
					<p id="message">  <%=peep.message%></p><br/>
					<h5 id="author">
						  by <%=@user.name.capitalize%>  @<%=@user.user_name%>
					</h5>
				</li>
			<%end%>
		<%end%>
	</ol>
	<a id="post-a-peep" class= "button" href="/peeps/new">Post a Peep</a>
</article>




